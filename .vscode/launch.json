  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "args": [
        //"-u",
        //"tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/server/tests"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\server\\tests\\todoRouter_test.js"
    }
  ]
}
